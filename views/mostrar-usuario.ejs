<main class="asistentes contenedor">
    <h1><%= nombrePagina %></h1>

    <div class="informacion-usuario">
        <% if(usuario.imagen) { %> 
            <div class="imagen">
                <img src="/uploads/perfiles/<%= usuario.imagen %>">
            </div>
        <% } else { %>
            <div class="imagen">
                <img src="/uploads/perfiles/usuario-sin-imagen.png">
            </div>
        <% } %>

        <div class="texto">
            <%- usuario.descripcion %> 
        </div>
    </div>

    <div class="grupos-usuario">
        <% if(grupos.length > 0) { %>
            <h2>Grupos de: <%= usuario.nombre %> </h2>
            <ul class="lista-grupos">
                <% grupos.forEach(grupo=> { %> 
                    <li>
                        <div class="imagen">
                            <% if(grupo.imagen) { %>
                                <img src="/uploads/grupos/<%= grupo.imagen %>">
                            <% } else { %>
                                <img src="/uploads/meeti.jpg">
                            <% } %> 
                        </div>

                        <div class="texto">
                            <a href="/grupos/<%= grupo.id %>">
                                <h3><%= grupo.nombre %></h3>
                            </a>
                        </div>
                    </li>
                <% }) %> 
            </ul>
        <% } %> 
    </div>
</main>