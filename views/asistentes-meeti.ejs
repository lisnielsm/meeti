<main class="contenedor asistentes">
    <h1><%= nombrePagina %></h1>

    <% if(asistentes.length > 0) { %>
        <ul class="lista-asistentes">
            <% asistentes.forEach(asistente => { %>
                <li>
                    <% if(asistente.imagen) { %> 
                        <div class="imagen">
                            <img src="/uploads/perfiles/<%= asistente.imagen %>">
                        </div>
                    <% } else { %>
                        <div class="imagen">
                            <img src="/uploads/perfiles/usuario-sin-imagen.png">
                        </div>
                    <% } %>

                    <div class="texto">
                        <%= asistente.nombre %> 
                    </div>
                </li>
            <% }) %> 
        </ul>
    <% } else { %>
        <p class="no-asistentes">No hay asistentes</p>
    <% } %> 
</main>