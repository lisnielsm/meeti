<div class="contenedor">
    <h1><%= nombrePagina %></h1>

    <div class="informacion-grupo">
        <div class="imagen">
            <% if(grupo.imagen) { %>
                <img src="/uploads/grupos/<%= grupo.imagen %>">
            <% } else { %>
                <img src="/uploads/meeti.jpg">
            <% } %> 
        </div>

        <div class="texto">
            <%- grupo.descripcion %>
            
            <% if(grupo.url) { %> 
                <a target="_blank" href="<%= grupo.url %>" class="url">Visita nuestro sitio web</a>
            <% } %> 

            <% if(meetis.length > 0) { %>
                <h2>Pr√≥ximos Meeti's</h2>
                <ul class="lista-meetis">
                    <% meetis.forEach(meeti=> { %> 
                        <li>
                            <div>
                                <a href="/meeti/<%= meeti.slug %>">
                                    <h3><%= meeti.titulo %></h3>
                                </a>
                            </div>

                            <% moment.locale('es') %> 
                            <% const fecha = meeti.fecha + " " + meeti.hora %> 
                            <p class="fecha"><%= moment(fecha).format("LLLL") %> horas</p>    
                        </li>
                    <% }) %> 
                </ul>
    
            <% } %>
        </div>
    </div>
</div>