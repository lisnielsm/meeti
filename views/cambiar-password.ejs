<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %></h1>

    <form action="/cambiar-password" method="POST" class="default-form">
		<div class="campo">
			<label>Password Actual</label>
			<input type="password" name="anterior" placeholder="Password Actual" />
		</div>

		<div class="campo">
			<label>Nuevo Password</label>
			<input type="password" name="nuevo" placeholder="Nuevo Password" />
		</div>

		<div class="campo enviar">
			<input type="submit" value="Cambiar Password" class="btn btn-rosa" />
		</div>
	</form>
</main>